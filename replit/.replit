modules = ["nodejs-20", "python-3.12"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["deno"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Crypto Price Bot"

[[workflows.workflow]]
name = "Crypto Price Bot"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "deno run --unstable-kv --unstable-cron --allow-net --allow-env crypto-price-bot.ts"
waitForPort = 8000

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 43333
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["deno", "run", "--unstable-kv", "--unstable-cron", "--allow-net", "--allow-env", "typescript/crypto-price-bot.ts"]
